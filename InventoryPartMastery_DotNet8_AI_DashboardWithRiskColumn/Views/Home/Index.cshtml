@model IEnumerable<InventoryPartMastery.Models.Part>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Stock Quantity Chart</h3>
        <canvas id="stockChart"></canvas>
    </div>
    <div class="col-md-6">
        <h3>Stock Risk Prediction</h3>
        <canvas id="riskChart"></canvas>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctxStock = document.getElementById('stockChart').getContext('2d');
        var stockChart = new Chart(ctxStock, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.PartNames)),
                datasets: [{
                    label: 'Stock Quantity',
                    data: @Html.Raw(Json.Serialize(ViewBag.StockQuantities)),
                    backgroundColor: 'rgba(54, 162, 235, 0.6)'
                }]
            }
        });

        var ctxRisk = document.getElementById('riskChart').getContext('2d');
        var riskChart = new Chart(ctxRisk, {
            type: 'pie',
            data: {
                labels: ['Safe', 'Medium Risk', 'High Risk'],
                datasets: [{
                    data: [@ViewBag.SafeCount, @ViewBag.MediumCount, @ViewBag.HighCount],
                    backgroundColor: ['#28a745', '#ffc107', '#dc3545']
                }]
            }
        });
    </script>
}
