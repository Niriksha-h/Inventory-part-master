
@model IEnumerable<InventoryPartMastery.Models.Part>
@{
    ViewBag.Title = "Parts";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="m-0">Parts</h3>
    <a class="btn btn-primary" asp-action="Create">Add Part</a>
</div>
<form method="get" class="input-group mb-3">
    <input name="search" class="form-control" placeholder="Search by number, name, location, bin" value="@Context.Request.Query["search"]" />
    <button class="btn btn-outline-secondary" type="submit">Search</button>
</form>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Part Number</th>
            <th>Part Name</th>
            <th>Location</th>
            <th>Bin</th>
            <th class="text-end">Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.PartNumber</td>
            <td>@item.PartName</td>
            <td>@item.PartLocation</td>
            <td>@item.PartBin</td>
            <td class="text-end">@item.StockQuantity</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">View</a>
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
